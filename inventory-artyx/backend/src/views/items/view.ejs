<div class="max-w-screen-2xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-4">
            <a href="/items" class="inline-flex items-center justify-center w-10 h-10 rounded-lg border border-slate-200 hover:bg-slate-50 transition">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            </a>
            <div>
                <h2 class="text-2xl font-extrabold text-slate-900 tracking-tight"><%= item.name %></h2>
                <p class="text-sm font-medium text-slate-500">SKU: <span class="font-mono font-bold text-slate-900"><%= item.sku %></span></p>
            </div>
        </div>
        <div class="flex items-center gap-2">
            <a href="/items/<%= item.id %>/edit" class="inline-flex items-center px-4 py-2 bg-sky-600 text-white font-bold rounded-lg hover:bg-sky-700 transition">
                Redigera
            </a>
            <form method="POST" action="/items/<%= item.id %>/delete" style="display: inline;" onsubmit="return confirm('Är du säker på att du vill radera denna artikel?');">
                <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-bold rounded-lg hover:bg-red-700 transition">
                    Radera
                </button>
            </form>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Images Card -->
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Produktbilder</h3>
                <% if (images && images.length > 0) { %>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        <% images.forEach((img, idx) => { %>
                            <div class="relative group aspect-square rounded-xl overflow-hidden border border-slate-200 shadow-sm hover:shadow-md transition-all cursor-pointer" onclick="window.open('/items/<%= item.id %>/image/<%= img.filename %>', '_blank')">
                                <img src="/items/<%= item.id %>/image/<%= img.filename %>" alt="<%= item.name %> - Bild <%= idx + 1 %>" class="w-full h-full object-cover">
                                <% if (img.is_primary) { %>
                                    <div class="absolute top-2 right-2 bg-sky-500 text-white text-[10px] font-bold px-2 py-1 rounded-full shadow-sm">Huvudbild</div>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="flex flex-col items-center justify-center py-12 bg-slate-50 rounded-xl border border-dashed border-slate-200">
                        <svg class="w-12 h-12 text-slate-300 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p class="text-sm font-medium text-slate-500">Inga bilder uppladdade</p>
                        <a href="/items/<%= item.id %>/edit" class="text-xs font-bold text-sky-600 hover:text-sky-700 mt-2">Ladda upp bilder</a>
                    </div>
                <% } %>
            </div>

            <!-- Details -->
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Specifikationer</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <div>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Kategori</p>
                        <p class="text-sm font-medium text-slate-900"><%= item.category || '-' %></p>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Färg</p>
                        <p class="text-sm font-medium text-slate-900"><%= item.color || '-' %></p>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Leverantör</p>
                        <p class="text-sm font-medium text-slate-900"><%= item.supplier || '-' %></p>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Lev. Art.nr</p>
                        <p class="text-sm font-mono font-bold text-slate-900"><%= item.supplier_item_number || '-' %></p>
                    </div>
                    <% if (item.notes) { %>
                    <div class="col-span-2 pt-4 border-t border-slate-100">
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Beskrivning</p>
                        <p class="text-sm text-slate-600 whitespace-pre-line"><%= item.notes %></p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-8">
            <!-- Inventory & Price -->
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Lager & Pris</h3>
                <div class="space-y-6">
                    <div class="p-4 bg-slate-50 rounded-xl border border-slate-100">
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Lagersaldo</p>
                        <div class="flex items-baseline gap-2">
                            <span class="text-3xl font-extrabold <%= (item.quantity || 0) > 0 ? 'text-slate-900' : 'text-red-600' %>"><%= item.quantity || 0 %></span>
                            <span class="text-sm font-bold text-slate-400 uppercase">st</span>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Inköpspris</p>
                            <p class="text-lg font-bold text-slate-900"><%= item.purchase_price ? parseFloat(item.purchase_price).toFixed(2) + ' kr' : '-' %></p>
                        </div>
                        <div>
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Försäljningspris</p>
                            <p class="text-lg font-bold text-emerald-600"><%= item.sales_price ? parseFloat(item.sales_price).toFixed(2) + ' kr' : '-' %></p>
                        </div>
                    </div>

                    <% if (item.price_group) { %>
                    <div class="pt-6 border-t border-slate-100">
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-tight mb-1">Prisgrupp</p>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-amber-50 text-amber-700 border border-amber-100 uppercase tracking-wider"><%= item.price_group %></span>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Barcode -->
            <% if (item.barcode) { %>
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Streckkod</h3>
                <div class="flex flex-col items-center justify-center p-4 bg-white rounded-xl border border-slate-100">
                    <div class="text-sm font-mono font-bold text-slate-900 mb-4"><%= item.barcode %></div>
                    <a href="/items/<%= item.id %>/print-label" class="inline-flex items-center px-4 py-2 bg-slate-100 text-slate-900 font-bold rounded-lg hover:bg-slate-200 transition">
                        <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" /></svg>
                        Skriv ut etikett
                    </a>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
