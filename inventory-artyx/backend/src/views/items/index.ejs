<div class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
            <div>
                <h2 class="text-3xl font-bold text-gray-900">Artiklar</h2>
                <p class="text-sm text-gray-600 mt-1">Hantera lagersaldo och prissättning</p>
            </div>
            <a href="/items/new" class="inline-flex items-center px-4 py-2 bg-sky-600 hover:bg-sky-700 text-white font-semibold rounded-lg shadow-sm transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Ny artikel
            </a>
        </div>

        <!-- Search and filters -->
        <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Sök</label>
                    <input type="text" id="searchInput" placeholder="SKU, namn, leverantör..." 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Kategori</label>
                    <select id="categoryFilter" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                        <option value="">Alla kategorier</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Lagerstatus</label>
                    <select id="stockFilter" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                        <option value="">Alla</option>
                        <option value="in-stock">I lager</option>
                        <option value="out-of-stock">Slut i lager</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Desktop table view -->
        <div class="hidden lg:block bg-white rounded-lg shadow-sm overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-2  text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Artikel</th>
                        <th class="px-6 py-2  text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th>
                        <th class="px-6 py-2  text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kategori</th>
                        <th class="px-6 py-2  text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Leverantör</th>
                        <th class="px-6 py-2  text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Inköpspris</th>
                        <th class="px-6 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Försäljningspris</th>
                        <th class="px-6 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Lager</th>
                        <th class="px-6 py-2  text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Åtgärder</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (!items || items.length === 0) { %>
                        <tr>
                            <td colspan="8" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center">
                                    <svg class="w-12 h-12 text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                                    </svg>
                                    <p class="text-gray-500">Inga artiklar hittades</p>
                                </div>
                            </td>
                        </tr>
                    <% } else { %>
                        <% items.forEach(item => { %>
                        <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='/items/<%= item.id %>/view'">
                            <td class="px-6 py-2">
                                <div class="flex items-center gap-3">
                                    <% if (item.primary_image) { %>
                                        <img src="/items/<%= item.id %>/image/<%= item.primary_image.replace('_original', '_thumb').replace(/\.(jpg|jpeg|png|webp)$/i, '.jpg') %>" 
                                             alt="<%= item.name %>" 
                                             class="w-10 h-10 object-cover rounded-lg">
                                    <% } else { %>
                                        <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center">
                                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                            </svg>
                                        </div>
                                    <% } %>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900"><%= item.name %></div>
                                        <% if (item.price_group) { %>
                                            <div class="text-xs text-amber-600 font-medium"><%= item.price_group %></div>
                                        <% } %>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-md bg-gray-900 text-white text-xs font-mono font-semibold"><%= item.sku %></span>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap">
                                <% if (item.category) { %>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full bg-purple-100 text-purple-800 text-xs font-medium"><%= item.category %></span>
                                <% } else { %>
                                    <span class="text-gray-400">-</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap text-sm text-gray-600">
                                <%= item.supplier || '-' %>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap text-right text-sm text-gray-900">
                                <%= item.purchase_price ? parseFloat(item.purchase_price).toFixed(2) + ' kr' : '-' %>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap text-right text-sm font-semibold text-emerald-600">
                                <%= item.sales_price ? parseFloat(item.sales_price).toFixed(2) + ' kr' : '-' %>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap text-center">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold <%= (item.quantity || 0) > 0 ? 'bg-emerald-100 text-emerald-800' : 'bg-red-100 text-red-800' %>">
                                    <%= item.quantity || 0 %> st
                                </span>
                            </td>
                            <td class="px-6 py-2 whitespace-nowrap text-right" onclick="event.stopPropagation()">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="/items/<%= item.id %>/view" 
                                       class="flex items-center gap-1 p-2 text-gray-500 hover:text-sky-600 hover:bg-sky-50 rounded-lg transition-colors text-xs font-medium"
                                       title="Visa">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                        <span>Visa</span>
                                    </a>
                                    <a href="/items/<%= item.id %>/edit" 
                                       class="flex items-center gap-1 p-2 text-gray-500 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-colors text-xs font-medium"
                                       title="Redigera">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-5M16.5 3.5a2.121 2.121 0 113 3L7 19l-4 1 1-4L16.5 3.5z"/>
                                        </svg>
                                        <span>Redigera</span>
                                    </a>
                                    <form method="POST" action="/items/<%= item.id %>/delete" style="display: inline;" onsubmit="event.stopPropagation(); return confirm('Är du säker på att du vill radera denna artikel?');">
                                        <button type="submit" class="flex items-center gap-1 p-2 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors text-xs font-medium" title="Radera">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                            <span>Radera</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Mobile card view -->
        <div class="lg:hidden space-y-4">
            <% if (!items || items.length === 0) { %>
                <div class="bg-white rounded-lg shadow-sm p-8 text-center">
                    <svg class="w-12 h-12 text-gray-300 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                    <p class="text-gray-500">Inga artiklar hittades</p>
                </div>
            <% } else { %>
                <% items.forEach(item => { %>
                <div class="bg-white rounded-lg shadow-sm p-4 cursor-pointer hover:shadow-md transition-shadow" 
                     onclick="window.location='/items/<%= item.id %>/view'">
                    <div class="flex gap-4">
                        <!-- Image -->
                        <div class="flex-shrink-0">
                            <% if (item.primary_image) { %>
                                <img src="/items/<%= item.id %>/image/<%= item.primary_image.replace('_original', '_thumb').replace(/\.(jpg|jpeg|png|webp)$/i, '.jpg') %>" 
                                     alt="<%= item.name %>" 
                                     class="w-20 h-20 object-cover rounded-lg">
                            <% } else { %>
                                <div class="w-20 h-20 bg-gray-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            <% } %>
                        </div>
                        
                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between mb-2">
                                <div class="flex-1">
                                    <h3 class="font-semibold text-gray-900 truncate"><%= item.name %></h3>
                                    <div class="flex items-center gap-2 mt-1">
                                        <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-900 text-white text-xs font-mono font-semibold"><%= item.sku %></span>
                                        <% if (item.category) { %>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full bg-purple-100 text-purple-800 text-xs"><%= item.category %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold <%= (item.quantity || 0) > 0 ? 'bg-emerald-100 text-emerald-800' : 'bg-red-100 text-red-800' %>">
                                    <%= item.quantity || 0 %> st
                                </span>
                            </div>
                            
                            <div class="grid grid-cols-2 gap-2 text-sm mt-3">
                                <div>
                                    <span class="text-gray-500">Inköp:</span>
                                    <span class="font-medium text-gray-900 ml-1"><%= item.purchase_price ? parseFloat(item.purchase_price).toFixed(2) + ' kr' : '-' %></span>
                                </div>
                                <div>
                                    <span class="text-gray-500">Försäljning:</span>
                                    <span class="font-semibold text-emerald-600 ml-1"><%= item.sales_price ? parseFloat(item.sales_price).toFixed(2) + ' kr' : '-' %></span>
                                </div>
                                <% if (item.supplier) { %>
                                <div class="col-span-2">
                                    <span class="text-gray-500">Leverantör:</span>
                                    <span class="text-gray-900 ml-1"><%= item.supplier %></span>
                                </div>
                                <% } %>
                                <% if (item.price_group) { %>
                                <div class="col-span-2">
                                    <span class="text-xs text-amber-600 font-medium">Prisgrupp: <%= item.price_group %></span>
                                </div>
                                <% } %>
                            </div>
                            
                            <div class="flex gap-2 mt-3 pt-3 border-t border-gray-100" onclick="event.stopPropagation()">
                                <a href="/items/<%= item.id %>/view" 
                                   class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-sky-50 text-sky-700 text-sm font-medium rounded-lg hover:bg-sky-100 transition-colors">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                    Visa
                                </a>
                                <a href="/items/<%= item.id %>/edit" 
                                   class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-amber-50 text-amber-700 text-sm font-medium rounded-lg hover:bg-amber-100 transition-colors">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-5M16.5 3.5a2.121 2.121 0 113 3L7 19l-4 1 1-4L16.5 3.5z"/>
                                    </svg>
                                    Redigera
                                </a>
                                <form method="POST" action="/items/<%= item.id %>/delete" style="display: inline;" onsubmit="event.stopPropagation(); return confirm('Är du säker?');">
                                    <button type="submit" class="flex-1 inline-flex items-center justify-center px-3 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                        </svg>
                                        Radera
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>
