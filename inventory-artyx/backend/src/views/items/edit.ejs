<div class="max-w-screen-2xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-extrabold text-slate-900 tracking-tight">Redigera artikel: <%= item.name %></h2>
        <a href="/items" class="inline-flex items-center px-4 py-2 bg-slate-100 text-slate-900 font-bold rounded-lg hover:bg-slate-200 transition">
            ← Tillbaka
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Form -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <form action="/items/<%= item.id %>" method="POST" enctype="multipart/form-data" class="space-y-8">
                    <!-- Basic Info -->
                    <div>
                        <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Grundläggande information</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">SKU</label>
                                <input type="text" name="sku" value="<%= item.sku %>" disabled class="w-full px-3 py-2 bg-slate-50 border border-slate-200 rounded-lg text-slate-900 text-sm">
                            </div>
                            <div class="md:col-span-2">
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Namn *</label>
                                <input type="text" name="name" value="<%= item.name %>" required class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Kategori</label>
                                <input type="text" name="category" value="<%= item.category || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Färg</label>
                                <input type="text" name="color" value="<%= item.color || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Leverantör</label>
                                <input type="text" name="supplier" value="<%= item.supplier || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Lev. Art.nr</label>
                                <input type="text" name="supplier_item_number" value="<%= item.supplier_item_number || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                        </div>
                    </div>

                    <!-- Pricing -->
                    <div class="pt-8 border-t border-slate-100">
                        <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Prissättning</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Inköpspris</label>
                                <input type="number" name="purchase_price" step="0.01" value="<%= item.purchase_price || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Försäljningspris</label>
                                <input type="number" name="sales_price" step="0.01" value="<%= item.sales_price || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Prisgrupp</label>
                                <input type="text" name="price_group" value="<%= item.price_group || '' %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                        </div>
                    </div>

                    <!-- Inventory -->
                    <div class="pt-8 border-t border-slate-100">
                        <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Lagerstatus</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Antal i lager</label>
                                <input type="number" name="quantity" step="0.01" value="<%= item.quantity || 0 %>" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase tracking-tight mb-1">Lägg till antal</label>
                                <input type="number" name="add_quantity" step="0.01" placeholder="t.ex. 10" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500">
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="pt-8 border-t border-slate-100">
                        <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Beskrivning</h3>
                        <textarea name="description" rows="4" class="w-full px-3 py-2 bg-white border border-slate-200 rounded-lg text-slate-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500/20 focus:border-sky-500"><%= item.description || '' %></textarea>
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center justify-end gap-3 pt-8 border-t border-slate-100">
                        <a href="/items" class="inline-flex items-center px-4 py-2 bg-slate-100 text-slate-900 font-bold rounded-lg hover:bg-slate-200 transition">
                            Avbryt
                        </a>
                        <button type="submit" class="inline-flex items-center px-4 py-2 bg-sky-600 text-white font-bold rounded-lg hover:bg-sky-700 transition">
                            Uppdatera artikel
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Sidebar: Images -->
        <div class="space-y-8">
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Produktbilder</h3>
                
                <% if (images && images.length > 0) { %>
                    <div class="grid grid-cols-2 gap-4 mb-6">
                        <% images.forEach(function(img, index) { %>
                            <div class="relative group">
                                <div class="aspect-square rounded-lg overflow-hidden bg-slate-50 border <%= img.is_primary ? 'border-sky-500 ring-2 ring-sky-500/20' : 'border-slate-200' %>">
                                    <img src="/items/<%= item.id %>/image/<%= img.filename %>" class="w-full h-full object-cover">
                                </div>
                                <div class="mt-2 flex flex-col gap-1">
                                    <div class="flex items-center justify-between text-[10px]">
                                        <span class="font-bold uppercase <%= img.is_primary ? 'text-sky-600' : 'text-slate-400' %>">
                                            <%= img.is_primary ? 'Primär' : 'Bild ' + (index + 1) %>
                                        </span>
                                        <form method="POST" action="/items/<%= item.id %>/delete-image/<%= img.id %>" style="display: inline;" onsubmit="return confirm('Ta bort bilden?');">
                                            <button type="submit" class="text-red-500 hover:text-red-700 font-bold uppercase">Ta bort</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <% if (!images || images.length < 5) { %>
                    <form method="POST" action="/items/<%= item.id %>/upload-images" enctype="multipart/form-data" class="space-y-4">
                        <input type="file" name="images" id="images" accept="image/*" multiple class="block w-full text-xs text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-bold file:bg-sky-50 file:text-sky-700">
                        <button type="submit" class="w-full px-4 py-2 bg-sky-600 text-white font-bold rounded-lg hover:bg-sky-700 transition text-sm">
                            Ladda upp bilder
                        </button>
                    </form>
                <% } %>
            </div>

            <!-- Barcode Info -->
            <div class="bg-white rounded-2xl border border-slate-100 shadow-sm p-6">
                <h3 class="text-sm font-bold text-slate-400 uppercase tracking-wider mb-4">Streckkod</h3>
                <div class="text-center p-4 bg-slate-50 rounded-xl border border-slate-100">
                    <p class="text-xs font-mono text-slate-500"><%= item.barcode %></p>
                </div>
            </div>
        </div>
    </div>
</div>
