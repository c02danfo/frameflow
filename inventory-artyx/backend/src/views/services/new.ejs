<div class="bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="mb-6">
            <a href="/services" class="text-sky-600 hover:text-sky-700 text-sm font-medium mb-2 inline-block">
                ← Tillbaka till tjänster
            </a>
            <h2 class="text-3xl font-bold text-gray-900">Ny tjänst</h2>
            <p class="text-sm text-gray-600 mt-1">Skapa en ny tjänst för inramning</p>
        </div>

        <% if (error) { %>
            <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                <% if (error === 'name_required') { %>
                    Namn är obligatoriskt
                <% } else if (error === 'invalid_pricing_model') { %>
                    Ogiltig prissättningsmodell
                <% } else { %>
                    <%= error %>
                <% } %>
            </div>
        <% } %>

        <!-- Form -->
        <form method="POST" action="/services" class="bg-white rounded-lg shadow-sm p-6 space-y-6">
            <!-- Grundinformation -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        Namn <span class="text-red-500">*</span>
                    </label>
                    <input type="text" name="name" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="T.ex. Ramlimning, Glasbyte">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                    <input type="text" name="category" list="category-list"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="T.ex. Montage, Glas">
                    <datalist id="category-list">
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat %>">
                        <% }) %>
                    </datalist>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Beskrivning</label>
                    <textarea name="description" rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                              placeholder="Beskriv tjänsten... (valfritt)"></textarea>
                </div>
            </div>

            <!-- Prissättning (alltid timpris) -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Timpris (kr/timme) *</label>
                    <input type="number" name="base_price" step="0.01" min="0" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="T.ex. 450.00">
                    <p class="text-xs text-gray-500 mt-1">Används även som hourly_rate</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Standardtid (timmar) *</label>
                    <input type="number" name="standard_hours" step="0.25" min="0" value="1.0" required
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="T.ex. 0.5, 1.0, 2.0">
                    <p class="text-xs text-gray-500 mt-1">Kopieras in i order och kan justeras där</p>
                </div>

                <div class="md:col-span-2 bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <p class="text-sm font-medium text-blue-900 mb-1">Beräknat standardpris</p>
                    <p class="text-2xl font-bold text-blue-700" id="calculated-price">0.00 kr</p>
                    <p class="text-xs text-blue-600 mt-1">Timpris × Standardtid (kan justeras per order)</p>
                </div>
            </div>

            <!-- Intern info -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Intern kostnad per timme (kr)</label>
                    <input type="number" name="internal_cost_per_hour" step="0.01" min="0"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                           placeholder="0.00">
                    <p class="text-xs text-gray-500 mt-1">För marginalkalkyl (valfritt)</p>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Interna anteckningar</label>
                    <textarea name="internal_notes" rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-sky-500"
                              placeholder="Interna anteckningar... (valfritt)"></textarea>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end gap-3 pt-4 border-t">
                <a href="/services" class="px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors">
                    Avbryt
                </a>
                <button type="submit" class="px-6 py-2 bg-sky-600 hover:bg-sky-700 text-white font-medium rounded-lg transition-colors">
                    Skapa tjänst
                </button>
            </div>
        </form>
    </div>
</div>

<script>
  const timPris = document.querySelector('input[name="base_price"]');
  const standardTid = document.querySelector('input[name="standard_hours"]');
  const prisLabel = document.getElementById('calculated-price');

  function uppdateraPris() {
    const pris = parseFloat(timPris.value) || 0;
    const tid = parseFloat(standardTid.value) || 0;
    const total = pris * tid;
    prisLabel.textContent = total.toFixed(2) + ' kr';
  }

  timPris.addEventListener('input', uppdateraPris);
  standardTid.addEventListener('input', uppdateraPris);
  uppdateraPris();
</script>
