# Environment variables template for production deployment
# Copy this to .env.production and fill in real values
# DO NOT commit .env.production to git!

# Shared session secret (MUST be same for both apps for SSO)
SESSION_SECRET=GENERATE_STRONG_SECRET_HERE_128_CHARS

# JWT secret for auth-service
JWT_SECRET=GENERATE_STRONG_SECRET_HERE_128_CHARS

# Auth database password (defaults to auth123 if unset, but set it in production)
AUTH_DB_PASSWORD=your_secure_auth_db_password

# Database passwords
INVENTORY_DB_PASSWORD=your_secure_inventory_db_password
FRAMING_DB_PASSWORD=your_secure_framing_db_password

# Domain configuration (without protocol, e.g., example.com)
# This will generate subdomains: inventory.frameflowapp.com and framing.frameflowapp.com
DOMAIN=frameflowapp.com

