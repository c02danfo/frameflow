<%
const id = locals.id || '';
const name = locals.name || id;
const type = locals.type || 'text';
const value = locals.value || '';
const placeholder = locals.placeholder || '';
const required = locals.required || false;
const min = locals.min || '';
const step = locals.step || '';
%>
<input 
    type="<%= type %>" 
    id="<%= id %>" 
    name="<%= name %>" 
    <% if (value) { %>value="<%= value %>"<% } %>
    <% if (placeholder) { %>placeholder="<%= placeholder %>"<% } %>
    <% if (required) { %>required<% } %>
    <% if (min) { %>min="<%= min %>"<% } %>
    <% if (step) { %>step="<%= step %>"<% } %>
    class="w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-all"
/>
