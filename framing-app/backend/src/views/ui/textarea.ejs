<%
const id = locals.id || '';
const name = locals.name || id;
const rows = locals.rows || 3;
const value = locals.value || '';
const placeholder = locals.placeholder || '';
const required = locals.required || false;
%>
<textarea 
    id="<%= id %>" 
    name="<%= name %>" 
    rows="<%= rows %>"
    <% if (placeholder) { %>placeholder="<%= placeholder %>"<% } %>
    <% if (required) { %>required<% } %>
    class="w-full px-3 py-2 border border-gray-300 rounded-lg text-gray-900 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition-all resize-y"
><%= value %></textarea>
