<select 
    id="<%= id %>" 
    name="<%= name %>" 
    class="block w-full px-3 py-2 text-sm border border-slate-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 disabled:bg-slate-50 disabled:text-slate-500 transition-all <%= locals.classes || '' %>"
    <%= locals.required ? 'required' : '' %>
    <%= locals.disabled ? 'disabled' : '' %>
>
    <% if (locals.placeholder) { %>
        <option value="" <%= !locals.value ? 'selected' : '' %> disabled><%= placeholder %></option>
    <% } %>
    <%- body %>
</select>
