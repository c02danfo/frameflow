<% 
  const base = "inline-flex items-center justify-center px-4 py-2 border text-sm font-semibold rounded-md shadow-sm transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed";
  const variant = locals.variant === 'secondary' 
    ? "border-slate-300 text-slate-700 bg-white hover:bg-slate-50" 
    : (locals.variant === 'danger' 
        ? "border-transparent text-white bg-red-600 hover:bg-red-700 focus:ring-red-500" 
        : "border-transparent text-white bg-blue-600 hover:bg-blue-700");
%>

<% if (locals.href) { %>
    <a href="<%= href %>" class="<%= base %> <%= variant %> <%= locals.classes || '' %>">
        <%= text %>
    </a>
<% } else { %>
    <button type="<%= locals.type || 'button' %>" class="<%= base %> <%= variant %> <%= locals.classes || '' %>" <%= locals.disabled ? 'disabled' : '' %>>
        <%= text %>
    </button>
<% } %>
