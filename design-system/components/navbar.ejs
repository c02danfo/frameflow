<%- /* 
Navbar Component - Shared navigation bar for all apps
Modern grey design with responsive mobile menu
*/ -%>

<nav class="bg-slate-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <!-- Logo and main nav -->
            <div class="flex">
                <div class="flex-shrink-0 flex items-center">
                    <a href="https://<%= domain || 'frameflowapp.com' %>/dashboard" class="flex items-center gap-2">
                        <span class="text-2xl font-bold text-white">Frame<span class="text-sky-400">Flow</span></span>
                    </a>
                </div>
                
                <!-- Desktop navigation -->
                <% if (user) { %>
                <div class="hidden md:ml-8 md:flex md:space-x-1">
                    <a href="https://<%= domain || 'frameflowapp.com' %>/dashboard" 
                       class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-white hover:bg-slate-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                        </svg>
                        Översikt
                    </a>
                    
                    <a href="https://inventory.<%= domain || 'frameflowapp.com' %>" 
                       class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-white hover:bg-slate-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                        Lager & Artiklar
                    </a>
                    
                    <a href="https://framing.<%= domain || 'frameflowapp.com' %>" 
                       class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-300 hover:text-white hover:bg-slate-700 rounded-md transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
                        </svg>
                        Inramning & Order
                    </a>
                </div>
                <% } %>
            </div>
            
            <!-- User menu -->
            <div class="flex items-center">
                <% if (user) { %>
                    <!-- User info and logout -->
                    <div class="hidden sm:flex sm:items-center sm:gap-4">
                        <div class="flex items-center gap-2 px-3 py-2 rounded-md bg-slate-700">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            <div class="flex flex-col">
                                <span class="text-sm font-medium text-white"><%= user.firstName || user.email.split('@')[0] %></span>
                                <span class="text-xs text-gray-400"><%= user.email %></span>
                            </div>
                        </div>
                        
                        <a href="https://<%= domain || 'frameflowapp.com' %>/auth/logout" 
                           class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-slate-600 hover:bg-slate-500 rounded-md transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                            </svg>
                            Logga ut
                        </a>
                    </div>
                    
                    <!-- Mobile menu button -->
                    <div class="flex items-center sm:hidden">
                        <button type="button" onclick="toggleMobileMenu()" 
                                class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-slate-700 focus:outline-none">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                            </svg>
                        </button>
                    </div>
                <% } else { %>
                    <a href="https://<%= domain || 'frameflowapp.com' %>/auth/login" 
                       class="inline-flex items-center px-4 py-2 text-sm font-bold text-white bg-sky-600 hover:bg-sky-500 rounded-md transition-colors shadow-sm">
                        Logga in
                    </a>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Mobile menu -->
    <% if (user) { %>
    <div id="mobile-menu" class="hidden sm:hidden bg-slate-900">
        <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="https://<%= domain || 'frameflowapp.com' %>/dashboard" 
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-slate-800">
                Översikt
            </a>
            <a href="https://inventory.<%= domain || 'frameflowapp.com' %>" 
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-slate-800">
                Lager & Artiklar
            </a>
            <a href="https://framing.<%= domain || 'frameflowapp.com' %>" 
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-slate-800">
                Inramning & Order
            </a>
        </div>
        <div class="pt-4 pb-3 border-t border-slate-700">
            <div class="px-4 mb-3">
                <div class="text-base font-medium text-white"><%= user.firstName || user.email.split('@')[0] %></div>
                <div class="text-sm font-medium text-gray-400"><%= user.email %></div>
            </div>
            <div class="px-2">
                <a href="https://<%= domain || 'frameflowapp.com' %>/auth/logout" 
                   class="block px-3 py-2 rounded-md text-base font-medium text-white bg-slate-600 hover:bg-slate-500">
                    Logga ut
                </a>
            </div>
        </div>
    </div>
    <% } %>
</nav>

<script>
function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
}
</script>
